{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "allowJs": true,
    "types": [
      "webpack-env",
      "@types/jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "react": [".sink.d.ts"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
